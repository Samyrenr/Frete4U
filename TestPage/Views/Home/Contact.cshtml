@{
    ViewBag.Title = "Busca";
}
<h1>@ViewBag.Title</h1><hr />
<div class="container" style="margin-top:10px;">
    <div class="row">
        <div class="col-md-12 col-sm-12 col-lg-12 col-xs-12">
            <div class="panel panel-default">
                <button class="btn btn-amarelo" style="width:100%;" onclick="if ($('.mostrar').is(':visible')) { $('.mostrar').hide('fast'); $('#icon').removeClass('glyphicon-minus'); $('#icon').addClass('glyphicon-plus') } else { $('.mostrar').show('fast'); $('#icon').removeClass('glyphicon-plus'); $('#icon').addClass('glyphicon-minus') }">
                    <span style="float:left;">Filtros <span id="icon" class="glyphicon glyphicon-plus"></span></span>
                </button>
                <div class="row mostrar" style="margin-top:20px;  display:none;">
                    <div class="col-md-3 col-sm-3 col-lg-3 col-xs-12">
                        <div>
                            <ul>
                                <li>
                                    <b>Tipo de entrega:</b>
                                    <ul>
                                        <li class="mostrar"><label><input type="checkbox" />  Pequenas entregas</label></li>
                                        <li><label><input type="checkbox" />  Delivery(Comida)</label></li>
                                        <li><label><input type="checkbox" />  Mudança</label></li>
                                        <li><label><input type="checkbox" />  Frete(Grande porte)</label></li>
                                        <li><label><input type="checkbox" />  Guicho</label></li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-3 col-lg-3 col-xs-12">
                        <div>
                            <ul>
                                <li>
                                    <b>Tipo de veiculo:</b>
                                    <ul>
                                        <li><label><input type="checkbox" />  Pequenas entregas</label></li>
                                        <li><label><input type="checkbox" />  Delivery(Comida)</label></li>
                                        <li><label><input type="checkbox" />  Mudança</label></li>
                                        <li><label><input type="checkbox" />  Frete(Grande porte)</label></li>
                                        <li><label><input type="checkbox" />  Guicho</label></li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-3 col-lg-3 col-xs-12">
                        <div>
                            <ul>
                                <li>
                                    <b>Tipo de produto:</b>
                                    <ul>
                                        <li><label><input type="checkbox" />  Pequenas entregas</label></li>
                                        <li><label><input type="checkbox" />  Delivery(Comida)</label></li>
                                        <li><label><input type="checkbox" />  Mudança</label></li>
                                        <li><label><input type="checkbox" />  Frete(Grande porte)</label></li>
                                        <li><label><input type="checkbox" />  Guicho</label></li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-3 col-lg-3 col-xs-12">
                        <div>
                            <ul>
                                <li>
                                    <b>Volume:</b>
                                    <ul>
                                        <li><label><input type="checkbox" />  Pequenas entregas</label></li>
                                        <li><label><input type="checkbox" />  Delivery(Comida)</label></li>
                                        <li><label><input type="checkbox" />  Mudança</label></li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


