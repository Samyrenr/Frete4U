        <div class="form-group" hidden>
            <h3>Quais cidades você atende?</h3>
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.UF, new SelectList(new List<Object>{
                                                                                      new { value = "", text = "Selecione..."},
                                                                                      new { value = "AC", text = "Acre"},
